package com.kuznetsov.c42D.Game;

import com.kuznetsov.c42D.util.animation;
import com.kuznetsov.c42D.util.graphics;
import com.kuznetsov.c42D.util.image;

public class c4Animation extends animation {

    private int frame = 0;
    private final image i = new image("/demo/intro.png");
    private boolean running = true;

    @Override
    public void updateAndRender(graphics g) {
        System.out.println();
        if (frame < 100) {
            g.drawImage(frame - 100, g.hight / 2 - 25, i);
        } else if (frame > 200) {
            g.drawImage(-(frame - 200), g.hight / 2 - 25, i);
        }

        frame++;
        if (frame == 300) {
            running = false;
        }
    }

    @Override
    public boolean getRunning() {
        return running;
    }

}
